{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "Bundler",
    "module": "ES2020",
    "composite": true,
    "target": "ES2018",
    "baseUrl": ".",
    "outDir": "dist",
    "emitDeclarationOnly": true
  },
  "include": ["src/index.ts", "src/**/*.ts"],
  "exclude": [
    "vite.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
  ]
}
